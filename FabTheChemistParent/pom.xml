<project 
	xmlns="http://maven.apache.org/POM/4.0.0" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>fab.the.chemist.org</groupId> 
	<artifactId>FabTheChemistParent</artifactId>
	<version>1.0</version>
	<packaging>pom</packaging>

	<name>FabTheChemistParent</name>
	
	<url>http://maven.apache.org</url>
	<modules>
		<module>../FabTheChemistSqlDb</module>
		<module>../FabTheChemistWeb</module>
	</modules>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<basedir>/home/fabrice/Application/maven3-repo</basedir>
		<basedir2>/home/pi/maven3-repo</basedir2>
		<spring.version>5.0.2.RELEASE</spring.version> 
		<log4j.version>1.2.17</log4j.version>
		<slf4j.version>1.7.25</slf4j.version>
		<activiti.version>5.15.1</activiti.version>
		<jstl.version>1.2</jstl.version>
		<velocity.version>1.7</velocity.version>
	</properties>
	<build>
		<plugins>
			 <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <version>3.6.1</version>
            <configuration>
                <source>1.8</source>
                <target>1.8</target>
            </configuration>
        </plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-deploy-plugin</artifactId>
				<version>2.8.1</version>
				<configuration>
					<skip>true</skip>
				</configuration>
				<executions>
					<execution>
						<id>default-deploy</id>
						<phase>deploy</phase>
						<goals>
							<goal>deploy</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
<repositories>
	<repository>
			<id>local jars</id>
			<name>local jars</name>
			<url>file://${basedir}/</url>
	</repository>
	<repository>
			<id>local pi jars</id>
			<name>local jars</name>
			<url>file://${basedir2}/</url>
	</repository>
	<repository>
	      <id>Maven</id>
	      <url>https://mvnrepository.com/repos/central</url>
    </repository>
		
	<repository>
		<id>Activiti</id>
		<url>https://maven.alfresco.com/nexus/content/groups/public/</url>
	</repository>
 
	<repository>
		<id>postgres</id>
		<url>https://mvnrepository.com</url>
	</repository>

	</repositories> 
	
